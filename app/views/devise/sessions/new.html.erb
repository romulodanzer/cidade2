<div class="container">
  <div class="row" id="pwd-container">
    <div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login-form">

        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => '', :role => 'login' }) do |f| %>
          <img src="/45-Logo_Cidade_Transportes.JPG" class="img-responsive" alt="" />
        

            <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
            <% end %>

          <%= f.input :email, label: false, :placeholder => "Email", required: true, :input_html => {:class => "form-control input-lg" } %>
          <%= f.input :password, label: false, :placeholder => "Senha", :input_html => {:class => "form-control input-lg"} %>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>        
         
                              
          <%= f.submit :Entrar, :class => "btn btn-lg btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Entrando..."} %>
            <a href="maito://romulodanzer@gmail.com">Solicitar cadastro</a>
          </div>
    <% end %>


        <div class="form-links">
          <a href="#">www.grupocidade.com</a>
        </div>
