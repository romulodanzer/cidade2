<link rel="stylesheet" href="/css/bootstrap.min.css">
 
<div class="container">
  <div class="row" id="pwd-container">
    <div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login-form">

        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => '', :role => 'login', method: :put }) do |f| %>
          <img src="/45-Logo_Cidade_Transportes.JPG" class="img-responsive" alt="" />
            <%= f.error_notification %>
        
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>

          <%= f.input :email, label: false, :disabled => true, :input_html => {:class => "form-control input-lg" } %>
          <%= f.input :current_password, label: false, hint: "deixe em branco se nao quizer alterar", :placeholder => "Senha atual", :input_html => {:class => "form-control input-lg"} %>

           <%= f.input :password, label: false, required: false, :placeholder => "Nova Senha", :input_html => {:class => "form-control input-lg"}  %>
           <%= f.input :password_confirmation, label: false, required: false, :placeholder => "Confirmar nova senha", :input_html => {:class => "form-control input-lg"}  %>

                              
          <%= f.button :submit, :class => "btn btn-lg btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Entrando..."} %>
            <%= link_to "Back", :back %>
          </div>
          
    <% end %>


        <div class="form-links">
          <a href="#">www.grupochibatao.com.br</a>
        </div>
      </section>  
      </div>
      
      <div class="col-md-4"></div>
      

