<small>
<table style="border-color: black;" border="1" width="821">
<tbody>
<tr>
<td style="text-align: left;"><strong>&nbsp;O que?</strong></td>
<td style="text-align: right;"><strong>Quantidade</strong></td>
<td style="text-align: center;"><strong>Unidade</strong></td>
<td style="text-align: right;"><strong>Valor</strong></td>
<td style="text-align: right;"><strong>Local</strong></td>
</tr>
<% @despesa.produtos.each do |t| %>
<tr>
<td style="text-align: left;"><%= t.name %></td>
<td style="text-align: right;"><%= t.qtd %></td>
<td style="text-align: center;"><%= t.und %></td>
<td style="text-align: right;"><%= number_to_currency(t.valor) %></td>
<td style="text-align: right;">&nbsp; <%= t.navio.name if !t.navio.blank? %></td>
</tr>
<% end %>
<tr>
<td style="text-align: left;"></td>
<td style="text-align: right;"></td>
<td style="text-align: center;"><strong>SOMA:</strong></td>
<td style="text-align: right;"> 
	<%   if @despesa.compra_navios.sum(:valor) > 0 %>
    <strong> <%= number_to_currency(@despesa.compra_navios.sum(:valor)) %> </strong>
    <% else %>
    <%  if @despesa.produtos.sum(:valor) > 0 %>
    <strong> <%=   number_to_currency(@despesa.produtos.sum(:valor)) %> </strong>
    <%  end %>
    <% end %>
</td>
</tr>
<tr>
<td style="text-align: left;"></td>
<td style="text-align: right;"></td>
<td style="text-align: center;"><strong>DESCONTO:</strong></td>
<td style="text-align: right;"><strong><%= number_to_currency(@despesa.desconto) %></strong></td>
</tr>
<tr>
<td style="text-align: left;"></td>
<td style="text-align: right;"></td>
<td style="text-align: center;"><strong>VALOR TOTAL:</strong></td>
<td style="text-align: right;"><strong>
<%   if @despesa.compra_navios.sum(:valor) > 0 %>
    <strong> <%= number_to_currency(@despesa.compra_navios.sum(:valor)-@despesa.desconto) %> </strong>
    <% else %>
    <%  if @despesa.produtos.sum(:valor) > 0 %>
    <strong> <%=   number_to_currency(@despesa.produtos.sum(:valor)-@despesa.desconto) %> </strong>
    <%  end %>
    <% end %>
</strong></td>
</tr>
</tbody>
</table>
</small>