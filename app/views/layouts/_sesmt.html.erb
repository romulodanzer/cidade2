<% tecnico = [] %>
<% ControleDeExtintor.extintores_atu.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Hidrante.hidrantes_atu.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Mangueira.mangueiras_atu.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Boia.boia_atu.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% ControleDeExtintor.extintores_ante.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Hidrante.hidrantes_ante.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Mangueira.mangueiras_ante.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% Boia.boia_ante.group(:tecnico).each do |t|  tecnico << t.tecnico.upcase end %>
<% @tecnicos = tecnico.uniq %>
<% @estemes = ControleDeExtintor.extintores_atu.count + Hidrante.hidrantes_atu.count + Mangueira.mangueiras_atu.count + Boia.boia_atu.count %>
<% @mespassado = ControleDeExtintor.extintores_ante.count + Hidrante.hidrantes_ante.count + Mangueira.mangueiras_ante.count + Boia.boia_ante.count  %>

<% @data = [] %>
<% for e in @tecnicos %>
   <% @tmp2 = Boia.boia_ante.where(:tecnico => e).count + Mangueira.mangueiras_ante.where(:tecnico => e).count + Hidrante.hidrantes_ante.where(:tecnico => e).count + ControleDeExtintor.extintores_ante.where(:tecnico => e).count + ControleDeExtintor.extintores_atu.where(:tecnico => e).count + Hidrante.hidrantes_atu.where(:tecnico => e).count + Mangueira.mangueiras_atu.where(:tecnico => e).count + Boia.boia_atu.where(:tecnico => e).count %>
   <% @data << "{name: '#{e}' , y: #{@tmp2}, sliced: true}" %>
<% end %>

<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">
        Para este gráfico foram somados todos os tipos de Inspeção do SESMT sendo elas: <%= @estemes %> no mês atual e <% @mespassado %> do anterior, totalizando <%= @estemes + @mespassado %> inspeções.
    </p>
</figure>


<script>
    Highcharts.chart('container', {
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false,
        type: 'pie'
    },
    credits: false,
    title: {
        text: 'Inspeções por Técnicos'
    },
    tooltip: {
        pointFormat: '{series.name}: <b>{point.percentage:.1f}% {point.y} itens</b>'
    },
    accessibility: {
        point: {
            valueSuffix: '%'
        }
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
            }
        }
    },
    series: [{
        name: 'Tecnicos',
        colorByPoint: true,
        data: [<%= raw @data.join(",") %>]
    }]
});
</script>




