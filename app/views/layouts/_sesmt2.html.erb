<% embarcacao = [] %>
<% ControleDeExtintor.extintores_atu.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Hidrante.hidrantes_atu.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Mangueira.mangueiras_atu.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Boia.boia_atu.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% ControleDeExtintor.extintores_ante.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Hidrante.hidrantes_ante.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Mangueira.mangueiras_ante.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% Boia.boia_ante.group(:embarcacao).each do |t|  embarcacao << t.embarcacao.upcase end %>
<% @embarcacoes = embarcacao.uniq %>
<% @estemes = ControleDeExtintor.extintores_atu.count + Hidrante.hidrantes_atu.count + Mangueira.mangueiras_atu.count + Boia.boia_atu.count %>
<% @mespassado = ControleDeExtintor.extintores_ante.count + Hidrante.hidrantes_ante.count + Mangueira.mangueiras_ante.count + Boia.boia_ante.count  %>

<% @data2 = [] %>
<% for e in @embarcacoes %>
    <% @tmp = Boia.boia_ante.where(:embarcacao => e).count + Mangueira.mangueiras_ante.where(:embarcacao => e).count + Hidrante.hidrantes_ante.where(:embarcacao => e).count + ControleDeExtintor.extintores_ante.where(:embarcacao => e).count + ControleDeExtintor.extintores_atu.where(:embarcacao => e).count + Hidrante.hidrantes_atu.where(:embarcacao => e).count + Mangueira.mangueiras_atu.where(:embarcacao => e).count + Boia.boia_atu.where(:embarcacao => e).count %>
    <% if @tmp > 0 %>
    <% @data2 << "{name: '#{e}' , y: #{@tmp}, sliced: true}" %>
    <% end %>
<% end %>

<% if @data2.blank? %>
 <% @data2 = [] %>
<% end %>

<figure class="highcharts-figure">
    <div id="container2"></div> 
    <p class="highcharts-description">
        Para este gráfico foram inspecionado(as): <%= @data2.count %> embarções.
    </p>
</figure>


<script>
    Highcharts.chart('container2', {
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false,
        type: 'pie'
    },
    credits: false,
    title: {
        text: 'Itens Verificados por Embarcação'
    },
    tooltip: {
        pointFormat: '{series.name}: <b>{point.percentage:.1f}% {point.y} itens</b>'
    },
    accessibility: {
        point: {
            valueSuffix: '%'
        }
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
            }
        }
    },
    series: [{
        name: 'Embarcação',
        colorByPoint: true,
        data: [<%= raw @data2.join(",") %>]
    }]
    });
</script>




