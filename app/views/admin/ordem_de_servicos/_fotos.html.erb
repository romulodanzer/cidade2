
<% freefotos = [] %>
<% if @ordem_de_servico.foto1? %>
<% freefotos << @ordem_de_servico.foto1 %>
<% end %>
<% if @ordem_de_servico.foto2? %>
<% freefotos << @ordem_de_servico.foto2 %>
<% end %>
<% if @ordem_de_servico.foto3? %>
<% freefotos << @ordem_de_servico.foto3 %>
<% end %>
<% if @ordem_de_servico.foto4 %>
<% freefotos << @ordem_de_servico.foto4 %>
<% end %>


<% if freefotos.count > 0 %>

<ul class="img-list2">
    <% for foto in freefotos %>
  <li>
      <a href=<%= foto %>>
      <%= image_tag(foto, size: "360x240") %>
      <span class="text-content"><span>Foto antes</span></span>
      </a>
  </li>
  <% end %>
</ul>

<% end %>



<hr/>
<% if @ordem_de_servico.attaches.count > 0 %>
Fotos depois:
<ul class="img-list">
    <% for foto in @ordem_de_servico.attaches %>
  <li>
      <a href=<%= foto.avatar.url %>>
      <%= image_tag(foto.avatar.url, size: "360x240") %>
      <span class="text-content"><span><%= foto.descricao %></span></span>
      </a>
  </li>
  <% end %>
</ul>

<% end %>



