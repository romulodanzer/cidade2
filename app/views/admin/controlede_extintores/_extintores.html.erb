

<%= link_to "Importar via Excel", "/controle_de_extintores" %>

<% if params[:q].blank? %>

  <strong>Ultimos em PDF: </strong>
  <% @barcos = ControleDeExtintor.ultimos_7_dias.group(:embarcacao) %>
    <% if !@barcos.blank? %>
      <% for barco in @barcos %>
        <% data = barco.created_at.strftime('%Y-%m-%d') %>
        <% nomebarco = barco.embarcacao %>
        <%= link_to barco.embarcacao + " " + ControleDeExtintor.ultimos_7_dias.where(:embarcacao => barco.embarcacao).count.to_s, "/admin/controlede_extintores.pdf?order=id_desc&q%5Bcreated_at_gte%5D=#{data}&q%5Bembarcacao_equals%5D=#{nomebarco}&utf8=%E2%9C%93", :target => "_blank"  %>,
          <%= ' ' %>
      <% end %>
  <% end %>

<% end %>
